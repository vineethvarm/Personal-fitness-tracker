<LoginScreen>:
    name: "login"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Login to Your Account"
            font_size: 24
            bold: True
        TextInput:
            id: login_email
            hint_text: "Enter Email"
            multiline: False
        TextInput:
            id: login_password
            hint_text: "Enter Password"
            password: True
            multiline: False
        Button:
            text: "Login"
            on_press: root.login_user(login_email.text, login_password.text)
        Button:
            text: "Go to Signup"
            on_press: root.manager.current = "signup"

        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1  # Red text for error messages

<SignupScreen>:
    name: "signup"

    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Create an Account"
            font_size: 24
            bold: True
        TextInput:
            id: signup_name
            hint_text: "Enter Name"
            multiline: False
        TextInput:
            id: signup_email
            hint_text: "Enter Email"
            multiline: False
        TextInput:
            id: signup_password
            hint_text: "Enter Password"
            password: True
            multiline: False
        Button:
            text: "Signup"
            on_press: root.signup_user(signup_name.text, signup_email.text, signup_password.text)
        Button:
            text: "Go to Login"
            on_press: root.manager.current = "login"
        Label:
            id: error_label
            text: ""
            color: 1, 0, 0, 1  # Red text for error messages

<DashboardScreen>:
    name: "dashboard"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            id: welcome_label
            text: "Welcome to Dashboard!"
            font_size: 24
            bold: True
        Button:
            text: "Log Activity"
            on_press: root.go_to_fitness_tracker()
        Button:
            text: "Logout"
            on_press: root.on_logout()

<FitnessTrackerScreen>:
    name: "fitness_tracker"
    BoxLayout:
        orientation: "vertical"
        padding: 20
        spacing: 10
        Label:
            text: "Log Your Fitness Activity"
            font_size: 24
            bold: True
        TextInput:
            id: activity
            hint_text: "Enter the activity"
            multiline: False
        TextInput:
            id: duration
            hint_text: "Enter the duration (in minutes)"
            multiline: False
        TextInput:
            id: calories
            hint_text: "Enter calories burned"
            multiline: False
        Button:
            text: "Log Activity"
            on_press: root.log_activity(activity.text, duration.text, calories.text)
        Button:
            text: "Back to Dashboard"
            on_press: root.manager.current = "dashboard"
